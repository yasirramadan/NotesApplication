<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@color/colorPrimaryInverse</item>
        <item name="android:textColor">@color/colorTextPrimary</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>
    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>

    <!-- Lists -->
    <style name="List" />

    <style name="List.Text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="List.Text.Title">
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:textSize">@dimen/fontSizeHighlight1</item>
    </style>


    <style name="List.Icon">
        <item name="android:layout_width">40dp</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:layout_marginRight">16dp</item>
        <item name="android:layout_gravity">center_vertical</item>
    </style>

    <style name="List.Item">
        <item name="android:layout_width">match_parent</item>
        <item name="android:paddingLeft">@dimen/screenEdgeSpaceLeft</item>
        <item name="android:paddingRight">@dimen/screenEdgeSpaceRight</item>
        <item name="android:paddingTop">@dimen/listItemSpaceTop</item>
        <item name="android:paddingBottom">@dimen/listItemSpaceBottom</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">?attr/selectableItemBackground</item>
    </style>

    <style name="Divider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/dividerSize</item>
        <item name="android:background">@color/ColorDivider</item>
    </style>

    <style name="Layout" />

    <style name="Layout.Screen">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:paddingBottom">@dimen/screenEdgeSpaceBottom</item>
        <item name="android:paddingTop">@dimen/spaceBetweenContent</item>
        <item name="android:clipToPadding">false</item>
        <item name="android:clipChildren">false</item>
        <item name="android:background">@color/colorPrimaryInverse</item>
    </style>

    <style name="Text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_horizontal</item>
    </style>

    <style name="Text.Title">
        <item name="android:textSize">@dimen/fontSizeTitle1</item>
        <item name="android:paddingLeft">@dimen/spaceBetweenContentLarge</item>
        <item name="android:paddingRight">@dimen/spaceBetweenContentLarge</item>
    </style>

    <style name="WebView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_marginLeft">@dimen/spaceBetweenContent</item>
        <item name="android:layout_marginRight">@dimen/spaceBetweenContent</item>
    </style>

</resources>
